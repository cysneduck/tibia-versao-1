{
  "appId": "com.claimed.system",
  "productName": "Claimed System",
  "directories": {
    "output": "dist-electron",
    "buildResources": "public"
  },
  "files": ["dist/**/*", "electron/**/*", "package.json"],
  "asarUnpack": ["node_modules/electron-store/**/*", "node_modules/electron-updater/**/*"],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "public/pwa-512x512.png",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Claimed System"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/pwa-512x512.png",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/pwa-512x512.png",
    "category": "Utility",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "claimed-system"
  }
}
